doctype html
head
  meta(charset='UTF-8')
  title TABLE
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
.container.py-5.h-100
    h4 REGISTRATION INFORMATION
    .container.row.justify-content-center
      .card.bg-light
        table.table
          thead.thead-dark
            tr
              th(scope='col' class='th') SURNAME
              th(scope='col' class='th') GIVEN NAME
              th(scope='col' class='th') DATE OF TEST
              th(scope='col' class='th') RESIDENCE
              th(scope='col' class='th') OCCUPATION
              th(scope='col' class='th') NATIONALITY
              th(scope='col' class='th') CATEGORY
              
          tbody
            if forms.length 
            each form in forms
             tr 
              td(class='td') #{form.name}  
              td(class='td') #{form.gname}   
              td(class='td') #{form.date}
              td(class='td') #{form.place}
              td(class='td') #{form.occupation}
              td(class='td') #{form.nationality}
              td(class='td') #{form.category}
              
              td 
                  div 
                        form(method="GET" action="/deleteVehicle/"+form._id)
                          input(type="hidden" name="delete" value=form._id)
                          button.btn.btn-danger(type='submit' data-bs-toggle='modal' onclick='myFunction()' data-bs-target='#staticBackdrop')
                            img(src='../image/delete.png' style='width: 20px; height: 20px;')
                        a(href="/vehicle/"+form._id )
                          button.btn.btn-primary(style='background-color:#f1f1f1; margin-right: 5px;' )
                          img(src='../image/edit.jpg' style='width: 20px; height: 20px;')  